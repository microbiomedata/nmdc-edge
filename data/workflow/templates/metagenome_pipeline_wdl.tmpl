            # cp ~{kraken2_classification_tsv} ~{kraken2_report_tsv} ~{kraken2_krona_html} ~{rbadir}/kraken2/

    >>>

    runtime {
        memory: "60 GiB"
        cpu:  4
        maxRetries: 1
        docker: container
    }
}