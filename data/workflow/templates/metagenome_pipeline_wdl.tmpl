            cp ~{final_hqmq_bins_zip} \
            ~{final_lq_bins_zip} ~{final_gtdbtk_bac_summary} ~{final_gtdbtk_ar_summary} ~{short} ~{low} \
            ~{final_unbinned_fa} ~{final_checkm} ~{mags_version} ~{final_stats_json} ~{barplot} ~{heatmap} \
            ~{kronaplot} ~{magsdir}/

            # ReadbasedAnalysis objects
